        <Label x:Name="label" Content="请输入登陆口令（区分大小写）" HorizontalAlignment="Left" Height="25" Margin="145,30,0,0" VerticalAlignment="Top" Width="195"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="145,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="169"/>
        <Button x:Name="button" Content="确定" HorizontalAlignment="Left" Margin="145,150,0,0" VerticalAlignment="Top" Width="75" Click="onClicked"/>
        <Button x:Name="button1" Content="取消" HorizontalAlignment="Left" Margin="250,150,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.124,0.516" Click="OnCancel"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="10,30,0,0" VerticalAlignment="Top" Width="100" Source="pack://application:,,,/Resources/dialogPassword.png"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="145,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169"/>
    </Grid>
</Window>
